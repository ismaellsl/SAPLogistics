<core:View controllerName="nfeapp.WebContent.view.Master"
	xmlns="sap.m" xmlns:core="sap.ui.core">
	<Page title="{i18n>MasterTitle}">
		<subHeader>
			<Bar>
				<contentLeft>
					<SearchField search="handleSearch" width="100%">
					</SearchField>
				</contentLeft>
			</Bar>
		</subHeader>
		<List id="list" mode="{device>/listMode}" select="handleListSelect"
			items="{/Trips}">
			<ObjectListItem type="{device>/listItemType}" press="handleListItemPress"
				title="{DepartureTime}" number="{Passengernr}"
				icon="sap-icon://bus-public-transport">
				<attributes>
					<ObjectAttribute text="{DriverDetails/Name}" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{
							path: 'status',
							formatter: 'nfeapp.WebContent.util.Formatter.statusText'
						}"
						state="{
							path: 'status',
							formatter: 'nfeapp.WebContent.util.Formatter.statusState'
						}" />
				</firstStatus>
			</ObjectListItem>
		</List>
		<footer>
			<Bar>
			</Bar>
		</footer>
	</Page>
</core:View>